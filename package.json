{
  "name": "sixi.client.electronjs",
  "description": "喜小帮",
  "version": "0.1.6",
  "author": "杭州四喜信息技术有限公司",
  "private": true,
  "license": "UNLICENSED",
  "homepage": "http://www.sixi.com/",
  "contributors": [
    {
      "name": "clys"
    }
  ],
  "main": "electron/dev.js",
  "scripts": {
    "start": "electron .",
    "package": "npm run package:linux && npm run package:win32 && npm run package:win64",
    "package:linux": "electron-builder --linux && mkdir ./dist/linux_x64 && mv ./dist/xxb_* ./dist/linux_x64/ && mv ./dist/latest-linux.yml ./dist/linux_x64/",
    "package:win32": "electron-builder --win --ia32 && mkdir ./dist/win32_ia32 && mv ./dist/xxb_* ./dist/win32_ia32/ && mv ./dist/latest.yml ./dist/win32_ia32/",
    "package:win64": "electron-builder --win --x64 && mkdir ./dist/win32_x64 && mv ./dist/xxb_* ./dist/win32_x64/ && mv ./dist/latest.yml ./dist/win32_x64/",
    "clean": "rm -rf ./dist",
    "build": "npm run build:base && npm run package",
    "build:base": "npm run clean && npm run build:background && npm run build:vue",
    "build:background": "rm -rf ./background && webpack --config ./background_webpack.config.js --mode=production",
    "build:linux": "npm run build:base && npm run package:linux",
    "build:win32": "npm run build:base && npm run package:win32",
    "build:win64": "npm run build:base && npm run package:win64",
    "build:vue": "vue-cli-service build",
    "dev:background": "rm -rf ./background && webpack --config ./background_webpack.config.js --mode=development",
    "dev": "npm run dev:background && electron . -run-dev",
    "dev:vue": "vue-cli-service serve",
    "lint:vue": "vue-cli-service lint"
  },
  "build": {
    "appId": "sixi.client.electronjs",
    "productName": "喜小帮",
    "copyright": "Copyright©2008-2018 All rights reserved ${author}",
    "artifactName": "xxb_${os}_${version}.${ext}",
    "win": {
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "menuCategory": true
    },
    "linux": {
      "icon": "public/logo.png",
      "category": "Office"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://172.30.34.87/electron"
      }
    ],
    "directories": {
      "buildResources": "electron/build/"
    }
  },
  "dependencies": {
    "Base64": "^1.0.2",
    "axios": "^0.18.0",
    "crypto-js": "^3.1.9-1",
    "electron-updater": "^4.0.6",
    "iconv-lite": "^0.4.24",
    "iview": "^3.3.0",
    "nedb": "^1.8.0",
    "node-schedule": "^1.3.2",
    "systeminformation": "^4.0.16",
    "vue": "^2.6.6",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "argparse": "^1.0.10",
    "babel-eslint": "^10.0.1",
    "bluebird-lst": "^1.0.7",
    "buffer-from": "^1.1.1",
    "builder-util-runtime": "^8.2.0",
    "colors": "^1.3.3",
    "css-loader": "^2.1.1",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  }
}
